---
const projects = [
  {
    title: 'AI-Powered WhatsApp Business Automation',
    description: 'An intelligent WhatsApp automation system designed to handle customer queries, bookings, reminders, and human handover using NLP and rule-based logic.',
    problem: 'Small businesses struggle to respond to customer messages efficiently and consistently.',
    solution: 'Built an AI-assisted automation workflow that classifies user intent, responds automatically, and escalates complex cases to humans.',
    tech: ['Python', 'NLP', 'FastAPI', 'WhatsApp API', 'MongoDB'],
    image: '/images/projects/whatsapp-ai.png',
    featured: true,
    url: '/projects/whatsapp-ai',
    github: '#'
  },
  {
    title: 'Intelligent Document Key-Value Extraction System',
    description: 'A transformer-based NLP system to extract structured information from unstructured documents such as invoices and forms.',
    highlights: ['Named Entity Recognition', 'OCR integration', 'Structured JSON output'],
    tech: ['Python', 'Transformers', 'SpaCy', 'EasyOCR / Tesseract'],
    image: '/images/projects/nlp-extractor.png',
    featured: false,
    url: '/projects/nlp-extractor',
    github: '#'
  },
  {
    title: 'Object Detection and Speed Estimation System',
    description: 'A computer vision pipeline to detect, track, and estimate the speed of moving objects in video streams.',
    highlights: ['Real-time object tracking', 'Zone-based speed calculation', 'Accuracy analysis'],
    tech: ['OpenCV', 'Python', 'Deep Learning Models', 'Computer Vision Pipelines'],
    image: '/images/projects/cv-tracking.png',
    featured: false,
    url: '/projects/cv-speed-estimation',
    github: '#'
  }
];
---

<section id="projects" class="py-32 px-6 relative z-10 bg-gradient-to-b from-white/5 to-transparent backdrop-blur-sm">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-24">
      <h2 class="text-5xl md:text-6xl font-black gradient-text mb-6">Featured Projects</h2>
      <p class="text-xl md:text-2xl text-white/80 max-w-2xl mx-auto leading-relaxed">
        Real-world applied AI systems I've built from scratch
      </p>
      <div class="w-24 h-1 mx-auto mt-8 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
    </div>

    <!-- Featured Project (WhatsApp AI) -->
    {(() => {
      const featuredProject = projects.find(p => p.featured);
      return featuredProject && (
        <div class="group mb-24">
          <div class="glass rounded-3xl p-12 md:p-16 shadow-2xl shadow-black/20 border-white/10 max-w-6xl mx-auto hover:scale-[1.02] transition-all duration-500 hover:shadow-[0_35px_70px_rgba(0,0,0,0.6)] hover:shadow-purple-500/25">
            <div class="grid md:grid-cols-2 gap-12 items-center">
              <!-- Image -->
              <div class="relative overflow-hidden rounded-3xl group-hover:scale-105 transition-all duration-700">
                <img
                  src={featuredProject.image}
                  alt={featuredProject.title}
                  class="w-full h-80 md:h-96 object-cover rounded-3xl shadow-2xl"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              </div>

              <!-- Content -->
              <div class="space-y-6">
                <div>
                  <h3 class="text-4xl md:text-5xl font-black text-white mb-4 leading-tight">
                    {featuredProject.title}
                  </h3>
                  <p class="text-xl text-white/90 mb-6 leading-relaxed max-w-lg">
                    {featuredProject.description}
                  </p>

                  <!-- Problem/Solution -->
                  <div class="space-y-4 mb-8">
                    <div class="glass p-6 rounded-2xl border-l-4 border-orange-400">
                      <h4 class="font-bold text-lg text-orange-300 mb-2">Problem</h4>
                      <p class="text-white/80">{featuredProject.problem}</p>
                    </div>
                    <div class="glass p-6 rounded-2xl border-l-4 border-emerald-400">
                      <h4 class="font-bold text-lg text-emerald-300 mb-2">Solution</h4>
                      <p class="text-white/80">{featuredProject.solution}</p>
                    </div>
                  </div>
                </div>

                <!-- Tech Stack -->
                <div class="flex flex-wrap gap-3 mb-8">
                  {featuredProject.tech.map((tech, i) => (
                    <span class="px-4 py-2 glass rounded-xl text-sm font-semibold text-white/90 border-white/20 hover:bg-white/20 transition-all duration-300">
                      {tech}
                    </span>
                  ))}
                </div>

                <!-- CTAs -->
                <div class="flex flex-wrap gap-4">
                  <a href={featuredProject.url} class="gradient-border glass px-8 py-4 rounded-2xl font-semibold text-lg hover:scale-105 transition-all duration-300 flex-1 text-center min-w-[140px]">
                    View Project
                  </a>
                  <a href={featuredProject.github} class="glass px-8 py-4 rounded-2xl font-semibold text-lg text-white/90 hover:text-white hover:bg-white/10 border border-white/30 hover:scale-105 transition-all duration-300 flex-1 text-center min-w-[140px]">
                    GitHub
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      );
    })()}

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
      {projects.filter(p => !p.featured).map((project, index) => (
        <div class="group glass rounded-3xl p-8 hover:scale-105 hover:shadow-[0_25px_50px_rgba(0,0,0,0.5)] hover:shadow-purple-500/20 transition-all duration-500 shadow-2xl border-white/10 overflow-hidden">

          {/* Image */}
          <div class="relative mb-6 overflow-hidden rounded-2xl h-48 group-hover:scale-110 transition-all duration-700">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
          </div>

          {/* Content */}
          <div class="space-y-4">
            <h3 class="text-2xl font-bold text-white group-hover:translate-y-1 transition-all duration-300">
              {project.title}
            </h3>
            <p class="text-white/80 leading-relaxed text-base">
              {project.description}
            </p>

            {/* Highlights */}
            {project.highlights && (
              <div class="mt-4 space-y-2">
                <p class="text-sm font-semibold text-purple-300 uppercase tracking-wide">Highlights</p>
                <ul class="space-y-1">
                  {project.highlights.map((highlight, i) => (
                    <li class="flex items-center text-white/80 text-sm">
                      <div class="w-1.5 h-1.5 bg-emerald-400 rounded-full mr-3 flex-shrink-0"></div>
                      {highlight}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {/* Tech Badges */}
            <div class="flex flex-wrap gap-2 mt-6">
              {project.tech.map((tech, i) => (
                <span class="px-3 py-1 bg-white/10 backdrop-blur-sm rounded-lg text-xs font-semibold text-white/90 border border-white/20 hover:bg-white/20 transition-all duration-300">
                  {tech}
                </span>
              ))}
            </div>

            <!-- CTA -->
            <a href={project.url} class="inline-flex items-center space-x-2 mt-8 group/link text-purple-300 hover:text-white font-semibold transition-all duration-300">
              <span>View Project</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>