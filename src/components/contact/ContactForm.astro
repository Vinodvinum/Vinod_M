---
import { socialLinks } from '../../data/social-links';
---

<section id="contact" class="py-32 px-6 relative z-10 bg-gradient-to-b from-slate-900 to-black/50 border-t border-white/5">
  <div class="max-w-4xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-24">
      <h2 class="text-5xl md:text-6xl font-black gradient-text mb-6">Let's Connect</h2>
      <p class="text-xl md:text-2xl text-white/80 max-w-2xl mx-auto leading-relaxed mb-8">
        I am actively looking for <span class="gradient-text font-semibold">entry-level opportunities</span> in AI, Machine Learning, and Data-related roles.
      </p>
      <div class="w-24 h-1 mx-auto bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
    </div>

    <!-- Main Content -->
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      
      <!-- Contact Form -->
      <div>
        <div class="glass rounded-4xl p-10 md:p-12 shadow-2xl shadow-black/30 border-white/10 backdrop-blur-xl">
          <h3 class="text-3xl font-bold gradient-text mb-8 text-center">Get In Touch</h3>
          
          <form class="space-y-6" id="contact-form">
            <!-- Name -->
            <div>
              <label class="block text-white/90 font-semibold mb-3">Full Name</label>
              <input 
                type="text" 
                name="name" 
                required
                class="w-full glass px-6 py-4 rounded-2xl text-white/90 placeholder-white/50 border border-white/20 focus:border-purple-400 focus:outline-none focus:shadow-purple-500/30 transition-all duration-300 text-lg"
                placeholder="Vinod M"
              />
            </div>

            <!-- Email -->
            <div>
              <label class="block text-white/90 font-semibold mb-3">Email Address</label>
              <input 
                type="email" 
                name="email" 
                required
                class="w-full glass px-6 py-4 rounded-2xl text-white/90 placeholder-white/50 border border-white/20 focus:border-purple-400 focus:outline-none focus:shadow-purple-500/30 transition-all duration-300 text-lg"
                placeholder="your-email@example.com"
              />
            </div>

            <!-- Message -->
            <div>
              <label class="block text-white/90 font-semibold mb-3">Message</label>
              <textarea 
                name="message" 
                rows="5" 
                required
                class="w-full glass px-6 py-4 rounded-2xl text-white/90 placeholder-white/50 border border-white/20 focus:border-purple-400 focus:outline-none focus:shadow-purple-500/30 transition-all duration-300 resize-vertical text-lg"
                placeholder="Tell me about the opportunity or how I can contribute..."
              ></textarea>
            </div>

            <!-- Submit -->
            <button 
              type="submit"
              class="w-full gradient-border glass px-8 py-6 rounded-3xl text-xl font-bold text-white hover:scale-105 hover:shadow-[0_0_60px_rgba(102,126,234,0.6)] transition-all duration-300 shadow-2xl"
            >
              Send Message
              <svg class="inline ml-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </button>
          </form>

          <!-- Success Message -->
          <div id="form-success" class="hidden mt-6 p-6 rounded-3xl bg-emerald-500/20 border border-emerald-400/40 text-center">
            <div class="text-2xl mb-4">‚úÖ</div>
            <p class="text-emerald-100 text-lg font-semibold">Message sent successfully!</p>
            <p class="text-emerald-50 text-sm mt-2">I'll get back to you within 24 hours.</p>
          </div>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="space-y-8">
        <div class="glass rounded-3xl p-8 md:p-10 shadow-2xl shadow-black/20 border-white/10 backdrop-blur-xl hover:scale-105 transition-all duration-500">
          <h3 class="text-2xl font-bold gradient-text mb-8 text-center">Contact Information</h3>
          
          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-center space-x-4 p-4 glass rounded-2xl border-l-4 border-purple-400 hover:bg-white/10 transition-all duration-300">
              <div class="w-12 h-12 glass rounded-xl flex items-center justify-center text-2xl shadow-md">‚úâÔ∏è</div>
              <div>
                <p class="text-white/80 font-semibold text-sm uppercase tracking-wide">Email</p>
                <a href={`mailto:${socialLinks.email}`} class="text-lg font-bold gradient-text hover:text-purple-300 transition-colors">{socialLinks.email}</a>
              </div>
            </div>

            <!-- GitHub -->
            <div class="flex items-center space-x-4 p-4 glass rounded-2xl border-l-4 border-indigo-400 hover:bg-white/10 transition-all duration-300">
              <div class="w-12 h-12 glass rounded-xl flex items-center justify-center text-2xl shadow-md">üíª</div>
              <div>
                <p class="text-white/80 font-semibold text-sm uppercase tracking-wide">GitHub</p>
                <a href={`https://${socialLinks.github}`} target="_blank" class="text-lg font-bold gradient-text hover:text-indigo-300 transition-colors">github.com/yourusername</a>
              </div>
            </div>

            <!-- LinkedIn -->
            <div class="flex items-center space-x-4 p-4 glass rounded-2xl border-l-4 border-blue-400 hover:bg-white/10 transition-all duration-300">
              <div class="w-12 h-12 glass rounded-xl flex items-center justify-center text-2xl shadow-md">üíº</div>
              <div>
                <p class="text-white/80 font-semibold text-sm uppercase tracking-wide">LinkedIn</p>
                <a href={`https://${socialLinks.linkedin}`} target="_blank" class="text-lg font-bold gradient-text hover:text-blue-300 transition-colors">linkedin.com/in/yourprofile</a>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex items-center space-x-4 p-4 glass rounded-2xl border-l-4 border-emerald-400 hover:bg-white/10 transition-all duration-300">
              <div class="w-12 h-12 glass rounded-xl flex items-center justify-center text-2xl shadow-md bg-gradient-to-br from-emerald-500 to-teal-500">üì±</div>
              <div>
                <p class="text-white/80 font-semibold text-sm uppercase tracking-wide">WhatsApp</p>
                <a href={`https://wa.me/${socialLinks.whatsapp}`} target="_blank" class="text-lg font-bold text-emerald-300 hover:text-emerald-200 transition-colors">Quick Chat</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Form submission
  const form = document.getElementById('contact-form') as HTMLFormElement;
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const target = e.target as HTMLFormElement;
      const formData = new FormData(target);
      const successMsg = document.getElementById('form-success') as HTMLElement;
      
      // Simulate API call
      const submitBtn = target.querySelector('button[type="submit"]') as HTMLButtonElement;
      if (submitBtn) {
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = 'Sending...';
        submitBtn.disabled = true;
        
        setTimeout(() => {
          if (successMsg) successMsg.classList.remove('hidden');
          target.reset();
          submitBtn.innerHTML = originalText;
          submitBtn.disabled = false;
          setTimeout(() => {
            if (successMsg) successMsg.classList.add('hidden');
          }, 5000);
        }, 1500);
      }
    });
  }
</script>