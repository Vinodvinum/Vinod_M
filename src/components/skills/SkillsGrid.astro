---
const skillsData = [
  {
    category: 'AI & Machine Learning',
    items: [
      'Machine Learning (Supervised & Unsupervised)',
      'Feature Engineering', 
      'Model Evaluation & Optimization'
    ],
    icon: 'ü§ñ',
    color: 'from-purple-500 to-pink-500',
    proficiency: 85
  },
  {
    category: 'Applied AI',
    items: [
      'Natural Language Processing (NER, Text Classification, Chatbots)',
      'Computer Vision (Object Detection, Tracking, Speed Estimation)',
      'OCR & Document Intelligence'
    ],
    icon: 'üß†',
    color: 'from-indigo-500 to-blue-500',
    proficiency: 80
  },
  {
    category: 'Data & Analytics',
    items: [
      'Python (Pandas, NumPy)',
      'Data Analysis & Visualization',
      'Statistical Analysis'
    ],
    icon: 'üìä',
    color: 'from-emerald-500 to-teal-500',
    proficiency: 90
  },
  {
    category: 'Engineering & Tools',
    items: [
      'Python',
      'FastAPI',
      'Git & GitHub',
      'Streamlit',
      'REST APIs',
      'Basic Deployment Concepts'
    ],
    icon: '‚öôÔ∏è',
    color: 'from-orange-500 to-red-500',
    proficiency: 88
  }
];
---

<section id="skills" class="py-32 px-6 relative z-10 bg-white/3 backdrop-blur-sm">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-24">
      <h2 class="text-5xl md:text-6xl font-black gradient-text mb-6">Tech Stack</h2>
      <p class="text-xl md:text-2xl text-white/80 max-w-2xl mx-auto leading-relaxed">
        Full-stack AI Engineer building production systems
      </p>
      <div class="w-24 h-1 mx-auto mt-8 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
    </div>

    <!-- Skills Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-8">
      {skillsData.map((skill, index) => (
        <div class="group glass rounded-3xl p-10 hover:scale-105 hover:shadow-[0_25px_50px_rgba(0,0,0,0.5)] hover:shadow-purple-500/20 transition-all duration-500 cursor-pointer shadow-2xl border-white/10 relative overflow-hidden">
          
          {/* Gradient Background */}
          <div class={`absolute inset-0 bg-gradient-to-br ${skill.color} opacity-5 blur-xl group-hover:opacity-10 transition-opacity duration-500`}></div>
          
          {/* Icon */}
          <div class={`w-24 h-24 mx-auto mb-8 glass rounded-3xl flex items-center justify-center text-4xl shadow-2xl group-hover:scale-110 group-hover:rotate-6 transition-all duration-500 border-4 border-white/20 backdrop-blur-xl`}>
            <span>{skill.icon}</span>
          </div>
            
            {/* Category Title */}
            <h3 class="text-2xl md:text-3xl font-black text-white mb-8 text-center group-hover:translate-y-2 transition-all duration-300">
              {skill.category}
            </h3>
            
            {/* Proficiency Bar */}
            <div class="mb-8">
              <div class="flex justify-between items-center mb-3">
                <span class="text-white/80 font-semibold">Proficiency</span>
                <span class="text-2xl font-black gradient-text">{skill.proficiency}%</span>
              </div>
              <div class="w-full bg-white/10 rounded-2xl h-3 overflow-hidden">
                <div class={`h-3 bg-gradient-to-r ${skill.color} rounded-2xl transition-all duration-700`} 
                     style={`width: ${skill.proficiency}%`}></div>
              </div>
            </div>
          
          {/* Skills List */}
          <ul class="relative z-10 space-y-3">
            {skill.items.map((item, itemIndex) => (
              <li class="flex items-center space-x-3 group-hover:text-white/90 text-white/70 transition-colors duration-300">
                <div class="w-2 h-2 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full group-hover:scale-125 transition-all duration-300"></div>
                <span class="font-medium text-sm md:text-base">{item}</span>
              </li>
            ))}
          </ul>
          
          {/* Hover Effect */}
          <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 via-pink-500/10 to-indigo-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-3xl"></div>
        </div>
      ))}
    </div>
  </div>
</section>