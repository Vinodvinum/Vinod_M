---
// @ts-nocheck
import { navItems } from '../../data/nav';
---

<nav class="glass fixed top-0 w-full z-50 px-6 py-4 backdrop-blur-2xl shadow-2xl shadow-black/30">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <!-- Logo -->
     <!-- Logo -->   
    <a href="/" class="flex items-center space-x-3 group p-2 -m-2 rounded-2xl backdrop-blur-sm hover:bg-white/10 transition-all duration-300">
      <div class="w-12 h-12 glass rounded-xl p-1 shadow-xl group-hover:scale-110 group-hover:shadow-purple-500/30 transition-all duration-500">
        <img src="/images/profile.jpg" alt="Vinod M" class="w-full h-full rounded-xl object-cover" />
      </div>
      <div>
        <span class="text-xl md:text-2xl font-black gradient-text tracking-tight">Vinod M</span>
        <span class="block text-xs md:text-sm text-white/60 font-medium tracking-wide uppercase">AI Engineer</span>
      </div>
    </a>
    

    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center space-x-1">
      {navItems.map((item) => (
        <a 
          href={item.href}
          class="group relative px-6 py-3 text-lg font-medium text-white/80 hover:text-white transition-all duration-300 hover:scale-105"
        >
          {item.label}
          <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-gradient-to-r from-purple-400 to-pink-400 group-hover:w-full transition-all duration-300 origin-center"></span>
        </a>
      ))}
    </div>

    <!-- Mobile menu button -->
    <button id="mobile-menu" class="md:hidden glass p-4 rounded-2xl hover:scale-110 hover:shadow-purple-500/30 transition-all duration-300 shadow-xl">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu-items" class="md:hidden hidden mt-4 mx-6 glass p-6 rounded-3xl backdrop-blur-xl shadow-2xl shadow-black/30 border-white/20 space-y-4 animate-in slide-in-from-top-4 duration-300">
    {navItems.map((item) => (
      <a 
        href={item.href}
        class="block px-6 py-4 text-lg font-semibold text-white/90 hover:text-white hover:bg-white/10 rounded-2xl transition-all duration-300 border-l-4 border-transparent hover:border-purple-400"
        onclick="document.getElementById('mobile-menu-items').classList.add('hidden')"
      >
        {item.label}
      </a>
    ))}
  </div>
</nav>